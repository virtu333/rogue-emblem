{
  "name": "emblem-rogue",
  "version": "0.1.0",
  "description": "A Fire Emblem x Roguelike Tactical RPG",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node tools/syncData.js && vite build",
    "preview": "vite preview",
    "sync-data": "node tools/syncData.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "sim:progression": "node sim/progression.js",
    "sim:matchups": "node sim/matchups.js",
    "sim:economy": "node sim/economy.js",
    "sim:fullrun": "node sim/fullrun.js",
    "test:harness": "vitest run tests/harness",
    "test:harness:watch": "vitest watch tests/harness",
    "test:harness:pr": "node tests/agents/fuzz-runner.js --seeds 10 --all-scenarios --mode strict --use-default-scenario-budgets",
    "test:sim": "vitest run tests/sim",
    "sim:fullrun:harness": "node tests/sim/fullrun-runner.js --seeds 20 --difficulty normal --mode reporting --timeout-rate-threshold 8",
    "sim:fullrun:harness:invincible": "node tests/sim/fullrun-runner.js --seeds 20 --difficulty normal --invincibility --mode reporting --timeout-rate-threshold 8",
    "sim:fullrun:harness:pr": "node tests/sim/fullrun-slice-runner.js --suite pr",
    "sim:fullrun:harness:pr:single": "node tests/sim/fullrun-runner.js --seeds 10 --difficulty normal --mode strict",
    "sim:fullrun:harness:slices:list": "node tests/sim/fullrun-slice-runner.js --list",
    "fuzz": "node tests/agents/fuzz-runner.js --seeds 100 --scenario act1_rout_basic",
    "fuzz:nightly": "node tests/agents/fuzz-runner.js --seeds 150 --all-scenarios --mode reporting --timeout-rate-threshold 5 --use-default-scenario-budgets",
    "fuzz:nightly:strict": "node tests/agents/fuzz-runner.js --seeds 150 --all-scenarios --mode strict --use-default-scenario-budgets"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "phaser": "^3.80.0"
  },
  "devDependencies": {
    "sharp": "^0.34.5",
    "vite": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
